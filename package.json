{
  "name": "haiba-platform",
  "version": "2.0.0",
  "description": "منصة البديل لاستخراج الأوراق الرسمية - نظام متكامل مع قاعدة بيانات PostgreSQL",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"NEXT,WHATSAPP\" --prefix-colors \"blue,green\" \"cross-env NODE_OPTIONS=\\\"--max-old-space-size=4096\\\" next dev\" \"npm run whatsapp\"",
    "dev:next": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" next dev",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "start": "next start",
    "start:next": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:backup": "node scripts/backup-database.js create",
    "db:backup:list": "node scripts/backup-database.js list",
    "db:backup:restore": "node scripts/backup-database.js restore",
    "db:backup:health": "node scripts/backup-database.js health",
    "db:protect": "node scripts/database-protection.js enable",
    "db:validate": "node scripts/database-protection.js validate",
    "db:restore-point": "node scripts/database-protection.js restore-point",
    "db:monitor": "node scripts/database-monitor.js start",
    "db:monitor:check": "node scripts/database-monitor.js check",
    "db:indexes": "node scripts/add-performance-indexes.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker-compose up -d",
    "setup:dev": "npm run docker:up && npm run db:generate && npm run db:push && npm run db:seed",
    "setup:prod": "npm run docker:up && npm run db:generate && npm run db:deploy && npm run db:seed",
    "production:start": "npm run build && npm run start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "whatsapp": "node whatsapp-bot.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.987.0",
    "@aws-sdk/lib-storage": "^3.987.0",
    "@aws-sdk/s3-request-presigner": "^3.987.0",
    "@google/genai": "^1.37.0",
    "@gsap/react": "^2.1.2",
    "@prisma/client": "^5.7.1",
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.12",
    "@sentry/nextjs": "^8.0.0",
    "@studio-freight/lenis": "^1.0.42",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.180.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "eslint-config-next": "14.2.32",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "framer-motion": "^12.26.2",
    "gsap": "^3.14.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.544.0",
    "next": "14.2.32",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.4.32",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^9.16.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "three": "^0.180.0",
    "typescript": "^5.2.2",
    "whatsapp-web.js": "github:pedroslopez/whatsapp-web.js",
    "zod": "^4.1.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "baseline-browser-mapping": "^2.9.7",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.32",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "albadil",
    "egypt",
    "government-services",
    "document-extraction",
    "postgresql",
    "nextjs",
    "typescript"
  ],
  "author": "Albadil Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/haiba-platform"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "next-auth": {
      "nodemailer": "$nodemailer"
    }
  }
}
